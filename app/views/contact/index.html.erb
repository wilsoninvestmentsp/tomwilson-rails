<%= render 'layouts/jumbtron' %>
<section class="main-body without-search-feature">
  <div class="container" ng:controller="TicketCtrl">
    <div class="row content-section" id="contact-form">
      <div class="col-xs-12">
        <div class="box-shadow">
          <ol class="breadcrumb">
            <li><%= link_to 'Home',root_url %></li>
            <li class="active">Contact Us</li>
          </ol>
        </div>
      </div>
      <div class="col-xs-12">
        <h1>Contact Us</h1>
        <uib-alert ng:repeat="alert in alerts" type="{{alert.type}}">{{alert.message}}</uib-alert>
        <address>
          <b>Wilson Investment Properties, Inc.</b><br>
          14435 Big Basin Way, Ste 240<br>
          Saratoga, CA 95070<br>
          <abbr title="Phone">Phone:</abbr> <%= PHONE_NUMBER %>
        </address>
        <div class="row mar-btm-30" ng:if="show_form">
          <div class="col-md-6 contact-us">
            <form name="ticket_form" ng:submit="submitForm()" novalidate>
              <div class="form-group">
                <label>Full Name</label><br>
                <input type="text" class="form-control" ng:model="inquiry.name" placeholder="Full Name" required>
              </div>
              <div class="form-group">
                <label>Email</label><br>
                <input type="email" class="form-control" ng:model="inquiry.email" placeholder="Email" required>
              </div>
              <div class="form-group">
                <label>Phone #</label><br>
                <input type="tel" class="form-control" ng:model="inquiry.phone" placeholder="Phone #" required>
              </div>
              <div class="form-group">
                <label>Subject</label><br>
                <input type="text" class="form-control" ng:model="inquiry.subject" placeholder="A brief description of the inquiry" required>
              </div>
              <div class="form-group">
                <label>Description</label><br>
                <textarea rows="6" class="form-control" ng:model="inquiry.description" placeholder="Please descripbe the nature of your inquiry" required></textarea>
              </div>
              <div class="form-group">
                <div class="checkbox">
                  <label>
                    <input type="checkbox" ng:model="inquiry.newsletter"><span class="cr"><i class="cr-icon fa fa-check"></i></span> Sign up for our Newsletter
                  </label>
              	</div>
              <button type="submit" class="btn blue-btn" ng:disabled="!ticket_form.$valid" ng:if="!loading">
                <i class="fa fa-check" aria-hidden="true"></i> Submit</button>
              <button type="submit" class="btn btn-warning" ng:disabled="true" ng:if="loading"><i class="fa fa-ellipsis-h" aria-hidden="true"></i> Submitting</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>