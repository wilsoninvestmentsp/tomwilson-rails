<section class="slide-show-header">
  <%= render 'layouts/jumbtron' %>
</section>
<section class="main-body without-search-feature gray-bg">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="box-shadow">
          <ol class="breadcrumb white">
            <li><%= link_to 'Home', root_url %></li>
            <li><%= link_to 'Jobs', job_postings_path %></li>
            <% if current_user && @job_posting.persisted? %>
              <li><%= link_to @job_posting.title, blog_path(@job_posting) %></li>
            <% end %>
            <li class="active"><%= yield :job_posting %></li>
          </ol>
        </div>
      </div>
    </div>
    <div class="fixed-admin-body add-edit-blog">
      <div class="col-xs-12">
        <h1><%= yield :job_posting %></h1>
        <%= form_for @job_posting do |f| %>
        <% if @job_posting.errors.any? %>
          <div class="alert alert-danger fade in alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">Ã—</a>
            <uib-alert type="danger">
              <ul>
                <% @job_posting.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </uib-alert>
          </div>
        <% end %>
        <%= render partial: 'job_fields', locals: {f: f} %>
        <div class="row form-row mar-btm-30">
          <div class="col-xs-12">
            <%= f.button type: :submit, class: 'btn blue-btn btn-lg' do %><i class="fa fa-check" aria-hidden="true"></i> Submit Job<% end %>
            <% unless @job_posting.new_record? %>
              <%= link_to @job_posting, method: :delete, data: { confirm: 'Are you sure you wish to delete this job? This CANNOT be undone.' },class: 'btn btn-danger btn-lg' do %><i class="fa fa-trash" aria-hidden="true"></i> Delete Job<% end %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  $(document).on('ready page:load', function(){
    setTimeout(function(){
      try{tinyMCE.remove('#job_posting_description');}catch(e){}
      tinyMCE.init({
        selector: '#job_posting_description',
        toolbar: [
        "styleselect | bold italic | alignleft aligncenter alignright alignjustify",
        "bullist numlist outdent indent | link image | code | codesample"
          ],
        plugins: "image,link,code,imagetools,media,table,insertdatetime,charmap,print,preview,anchor,searchreplace,visualblocks",
        min_height: 400
      });
    },100);
  });
</script>
