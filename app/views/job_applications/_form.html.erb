<section class="slide-show-header">
  <%= render 'layouts/jumbtron' %>
</section>
<section class="main-body without-search-feature gray-bg">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <div class="box-shadow">
          <ol class="breadcrumb white">
            <li><%= link_to 'Home', root_url %></li>
            <li><%= link_to 'Jobs', job_applications_path %></li>
            <li class="active"><%= yield :job_application %></li>
          </ol>
        </div>
      </div>
    </div>
    <div class="fixed-admin-body add-edit-blog">
      <div class="col-xs-12">
        <h1><%= yield :job_application %></h1>
        <%= form_for @job_application do |f| %>
        <% if @job_application.errors.any? %>
          <div class="alert alert-danger fade in alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">Ã—</a>
            <ul>
              <% @job_application.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= render partial: 'job_application_fields', locals: {f: f} %>
        <div class="row form-row mar-btm-30">
          <div class="col-xs-12">
            <%= f.button type: :submit, class: 'btn blue-btn btn-lg' do %><i class="fa fa-check" aria-hidden="true"></i> Submit Application<% end %>
            <% unless @job_application.new_record? %>
              <%= link_to @job_application, method: :delete, data: { confirm: 'Are you sure you wish to delete this job application? This CANNOT be undone.' },class: 'btn btn-danger btn-lg' do %><i class="fa fa-trash" aria-hidden="true"></i> Delete Job<% end %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
