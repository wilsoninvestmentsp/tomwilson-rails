<%= render 'layouts/jumbtron' %>
<section class="main-body without-search-feature">
  <div class="container">
    <div class="row content-section">
      <div class="col-xs-12">
        <div class="box-shadow">
          <ol class="breadcrumb">
            <li><%= link_to 'Home',root_url %></li>
            <li class="active">Login</li>
          </ol>
        </div>
      </div>
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12">
        <h1>Login</h1>
        <div class="mar-top-15 mar-btm-30">
          <%= form_tag sessions_path do |f| %>
          <div class="form-group"><%= text_field_tag :email,nil,class: 'form-control',placeholder: 'Email' %></div>
          <div class="form-group"><%= password_field_tag :password,nil,class: 'form-control',placeholder: 'Password' %></div>
          <% if params[:redirect_uri].present? %>
          <div class="form-group"><%= hidden_field_tag :redirect_uri,nil,class: 'form-control',value: params[:redirect_uri] %></div>
          <% end %>
          <div class="form-group"><%= submit_tag 'Log In',class: 'btn btn-default' %></div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>