<% jassets.each do |asset| %>
  <div class="list-group-item resources-data">
    <div class="row">
      <div class="col-md-2 col-sm-3">
        <%= image_tag 'loading.svg', 'data-src': asset.image.thumb.url, class: 'img-responsive', alt: asset.title %>
      </div>
      <div class="col-md-10 col-sm-9">
        <h4><%= asset.title %></h4>
        <p><span><%= asset.description %></span></p>
        <%= link_to asset.link_uri, target: '_blank', class: 'btn blue-btn' do %><i class="fa fa-download fa-lg" aria-hidden="true"></i> <%= asset.link_name %><% end %>
        <% if current_user %>
        <%= link_to edit_jasset_path(asset), class: 'btn btn-success', title: 'Edit' do %><i class="fa fa-pencil" aria-hidden="true"></i> Edit<% end %>
        <%= link_to jasset_path(asset), method: :delete, data: { confirm: 'Are you sure you wish to delete this Resource? This CANNOT be undone.' }, class: 'btn btn-danger', title: 'Delete' do %><i class="fa fa-trash" aria-hidden="true"></i> Delete<% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>