<%= form_for(@jasset) do |f| %>
  <% if @jasset.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@jasset.errors.count, "error") %> prohibited this jasset from being saved:</h2>

      <ul>
      <% @jasset.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Begin Row :-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-: -->
  <!-- :-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-: -->
  <div class="row" ng:init="jasset = <%= JassetSerializer.new(@jasset,root: false).to_json %>">
  
    <!-- Begin Col :-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-: -->
    <div class="col-md-6">
    
        <div class="form-group required">
          <%= f.label :title %><br>
          <%= f.text_field :title,class: 'form-control',placeholder: '' %>
        </div>

        <div class="form-group">
          <%= f.label :description %><br>
          <%= f.text_area :description,class: 'form-control',placeholder: '' %>
        </div>

        <div class="form-group required">
          <%= f.label 'Link Name' %><br>
          <%= f.text_field :link_name,class: 'form-control',placeholder: '' %>
        </div>

        <div class="form-group required">
          <%= f.label 'Link URL' %><br>
          <%= f.text_field :link_uri,class: 'form-control',placeholder: '' %>
        </div>

        <div class="form-group">
          <%= f.label :image %><br>
          <div ng:show="jasset.image.image.thumb.url"><%= image_tag @jasset.image.thumb.url,class: 'img-thumbnail' %><br><br></div>
          <%= f.file_field :image,class: 'form-control',placeholder: 'Profile Image' %>
        </div>

        <div class="form-group">
          <%= f.label 'Priority' %><br>
          <%= f.number_field :sort,class: 'form-control',placeholder: '' %>
        </div>

        <div class="form-group">
          <%= f.submit 'Save',class: 'btn btn-success btn-lg form-control' %>
        </div>
    
    </div>
    <!-- End Col :-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-: -->
  
  </div>
  <!-- :-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-: -->
  <!-- End Row :-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-:-: -->

<% end %>