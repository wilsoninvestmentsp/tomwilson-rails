<div class="col-md-6 col-sm-12 col-xs-12 left-col">
  <div class="form-group">
    <%= f.label :title, class: 'control-label' %>
    <%= f.text_field :title, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :purchase_price, class: 'control-label' %>
    <%= f.number_field :purchase_price, min: 0, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :raise_amount, class: 'control-label' %>
    <%= f.number_field :raise_amount, min: 0, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :hold_period, class: 'control-label' %>
    <%= f.text_field :hold_period, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :preferred_return, class: 'control-label' %>
    <%= f.number_field :preferred_return, min: 0, step: :any, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :average_annual_return, class: 'control-label' %>
    <%= f.number_field :average_annual_return, min: 0, step: :any, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :irr, 'IRR', class: 'control-label' %>
    <%= f.number_field :irr, min: 0, step: :any, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :close_date, class: 'control-label' %>
    <%= f.date_field :close_date, value: @syndication.close_date.strftime('%m/%d/%Y'), class: 'form-control datepicker' %>    
  </div>
  <div class="form-group">
    <%= f.label :price_per_share, class: 'control-label' %>
    <%= f.number_field :price_per_share, min: 0, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :loan_amount, class: 'control-label' %>
    <%= f.number_field :loan_amount, min: 0, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :loan_rate, class: 'control-label' %>
    <%= f.number_field :loan_rate, min: 0, step: :any, class: 'form-control' %>    
  </div>
</div>
<div class="col-md-6 col-sm-12 col-xs-12 left-col">
  <div class="form-group">
    <%= f.label :year_built, class: 'control-label' %>
    <%= f.number_field :year_built, min: 0, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :building_size, class: 'control-label' %>
    <%= f.number_field :building_size, min: 0, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :lot_size, class: 'control-label' %>
    <%= f.number_field :lot_size, min: 0, step: :any, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :number_of_buildings, class: 'control-label' %>
    <%= f.number_field :number_of_buildings, min: 0, class: 'form-control' %>    
  </div>
  <div class="form-group">
    <%= f.label :property_type, class: 'control-label' %>
    <%= f.text_field :property_type, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :number_of_tenants, class: 'control-label' %>
    <%= f.number_field :number_of_tenants, min: 0, class: 'form-control' %> 
  </div>
  <div class="form-group">
    <%= f.label :image, class: 'control-label' %>
    <%= f.label :image, class: 'btn btn-default' do %>
    <i class="fa fa-picture-o" aria-hidden="true"></i> Upload Image
    <%= f.file_field :image, style: 'display:none;' %>
    <% end %>
    <%= image_tag @syndication.image.thumb.url, class: 'img-responsive mar-top-15 preview-img' %>
  </div>
  <div class="form-group">
    <%= f.label :notes, class: 'control-label' %>
    <%= f.text_area :notes, class: 'form-control', rows: 2 %> 
  </div>
  <div class="form-group">
    <div class="checkbox">
      <label><%= f.check_box :active %><span class="cr"><i class="cr-icon fa fa-check"></i></span> Check to Active / Uncheck to Inactive</label>
    </div>
  </div>
</div>
<div class="col-xs-12"><hr></div>