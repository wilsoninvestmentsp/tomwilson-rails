<%= render 'layouts/jumbtron' %>
<section class="main-body without-search-feature gray-bg">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="box-shadow">
          <ol class="breadcrumb white">
            <li><%= link_to 'Home', root_url %></li>
            <li><%= link_to 'Syndications', syndications_path %></li>
            <% if action_name == 'edit' %>
            <li>
              <%= link_to @syndication.title, @syndication %>
            </li>
            <% end %>
            <li class="active"><%= action_name.capitalize%></li>
          </ol>
        </div> 
      </div>
    </div>
    <div class="fixed-admin-body">
      <div class="col-xs-12">
        <h1><%= yield(:page_title) %></h1>
      </div>
      <%= form_for @syndication do |f| %>
      <%= render partial: 'syndication_fields', locals: {f: f} %>
      <%= f.fields_for :annual_returns do |ff| %>
      <%= render 'annual_return_fields', f: ff %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association 'Add Year', f, :annual_returns %>
      </div>
      <%= f.submit 'Create' %>
      <% end %>
    </div>
  </div>
</section>