<%= render 'layouts/jumbtron' %>
<section class="main-body without-search-feature gray-bg">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="box-shadow">
          <ol class="breadcrumb white">
            <li><%= link_to 'Home',root_url %></li>
            <li class="active">Connect With Meetup</li>
          </ol>
        </div>
      </div>
    </div>
    <div class="fixed-admin-body">
<div class="col-xs-12">
  <h1>Connect With Meetup</h1>
  <div class="row mar-top-30 mar-btm-30 import-file">
    <div class="col-sm-6">
      <% label_txt = meetup_token_expired? ? 'Connect' : 'Connected' %>
      <%= link_to_if meetup_token_expired?, label_txt, meetup_auth_url, class: 'btn blue-btn btn-lg' %>
      <% if !meetup_token_expired? %>
        <%= link_to 'Reconnect to Meetup', meetup_auth_url, class: 'btn btn-default btn-lg' %>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>
</section>