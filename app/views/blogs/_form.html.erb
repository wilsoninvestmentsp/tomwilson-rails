<section class="slide-show-header">
  <%= render 'layouts/jumbtron' %>
</section>
<section class="main-body without-search-feature">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="box-shadow">
          <ol class="breadcrumb">
            <li><%= link_to 'Home', root_url %></li>
            <li><%= link_to 'Blogs', blogs_path %></li>
            <% if current_user && action_name != 'new' %>
              <li><%= link_to @blog.title, blog_path(@blog) %><li>
            <% end %>
            <li class="active"><%= yield :blog_action %></li>
          </ol>
        </div>
      </div>
    </div>
    <div class="fixed-admin-body">
      <div class="col-xs-12">
        <h1><i class="fa fa-plus" aria-hidden="true"></i> <%= yield :blog_action %></h1>
        <%= form_for @blog do |f| %>
        <% if @blog.errors.any? %>
          <uib-alert type="danger">
            <ul>
              <% @blog.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </uib-alert>
        <% end %>
        <%= render partial: 'blog_fields', locals: {f: f} %>
        <div class="row form-row mar-btm-30">
          <div class="col-xs-12">
            <%= f.button type: :submit, class: 'btn blue-btn btn-lg mar-right-15' do %>Submit Blog <i class="fa fa-angle-right fa-next" aria-hidden="true"></i>
            <% end %>
            <% unless @blog.new_record? %>
              <%= link_to 'Delete Blog', @blog, method: :delete, data: { confirm: 'Are you sure you wish to delete this blog? This CANNOT be undone.' },class: 'btn btn-danger btn-lg' %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>