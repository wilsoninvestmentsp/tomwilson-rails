<section class="slide-show-header">
  <%= render 'layouts/jumbtron' %>
</section>
<section class="main-body without-search-feature gray-bg">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="box-shadow">
          <ol class="breadcrumb white">
            <li><%= link_to 'Home', root_url %></li>
            <li><%= link_to 'Blogs', blogs_path %></li>
            <% if current_user && @blog.persisted? %>
              <li><%= link_to @blog.title, blog_path(@blog) %></li>
            <% end %>
            <li class="active"><%= yield :blog_action %></li>
          </ol>
        </div>
      </div>
    </div>
    <div class="fixed-admin-body add-edit-blog">
      <div class="col-xs-12">
        <h1><%= yield :blog_action %></h1>
        <%= form_for @blog do |f| %>
        <% if @blog.errors.any? %>
          <div class="alert alert-danger fade in alert-dismissable">
            <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">Ã—</a>
            <uib-alert type="danger">
              <ul>
                <% @blog.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </uib-alert>
          </div>
        <% end %>
        <%= render partial: 'blog_fields', locals: {f: f} %>
        <div class="row form-row mar-btm-30">
          <div class="col-xs-12">
            <%= f.button type: :submit, class: 'btn blue-btn btn-lg' do %><i class="fa fa-check" aria-hidden="true"></i> Submit Blog<% end %>
            <% unless @blog.new_record? %>
              <%= link_to @blog, method: :delete, data: { confirm: 'Are you sure you wish to delete this blog? This CANNOT be undone.' },class: 'btn btn-danger btn-lg' do %><i class="fa fa-trash" aria-hidden="true"></i> Delete Blog<% end %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  $(document).on('ready page:load', function(){
    setTimeout(function(){
      try{tinyMCE.remove('#blog_content');}catch(e){}
      tinyMCE.init({
        selector: '#blog_content',
        min_height: 391
      });
    },100);
  });
</script>