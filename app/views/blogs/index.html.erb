<%= stylesheet_link_tag 'blog-pages' %>
<%= render 'layouts/jumbtron' %>
<section class="main-body without-search-feature">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="box-shadow">
          <ol class="breadcrumb">
            <li><%= link_to 'Home', root_url %></li>
            <li class="active">Our Blogs</li>
            <% if current_user %>
              <li><%= link_to 'New', new_blog_path %></li>
            <% end %>
          </ol>
        </div>
      </div>
    </div>
    <div class="row content-section">
      <div class="col-xs-12">
        <h1>Our Blogs</h1>
        <div class="row blog-listing" id="blog-listing">
          <%= render partial: 'blogs', locals: {blogs: @blogs} %>
        </div>
      </div>
    </div>
    <% if Blog.count > 1 %>
    <div class="row">
      <div class="col-xs-12 text-center">
        <% if @blogs.current_page < @blogs.num_pages %>
          <%= link_to blogs_path(page: params.fetch(:page, 2)), id: 'more_blogs', class: 'btn btn-lg border-btn space-setting', remote: true do %><i class="fa fa-th" aria-hidden="true"></i> View More Blogs
          <% end %>
        <%  end %>
      </div>
    </div>
    <%= paginate @blogs %>
    <% end %>
  </div>
</section>

<%= javascript_include_tag 'blog' %>