<div id="newsletter" ng:controller="MailChimpCtrl">
  <div id="newsletter-form" class="panel panel-default">
    <form name="signup_form" ng:submit="submitForm()" novalidate class="form panel-body">
      <div class="form-group"><h5><%= t('newsletter.title') %></h5></div>
      <div class="form-group">
        <i class="fa fa-user input-icons" aria-hidden="true"></i>
        <input type="text" ng:model="signup.merge_fields.FNAME" class="form-control" placeholder="<%= t('newsletter.first_name') %>" required>
      </div>
      <div class="form-group">
        <i class="fa fa-user input-icons" aria-hidden="true"></i>
        <input type="text" ng:model="signup.merge_fields.LNAME" class="form-control" placeholder="<%= t('newsletter.last_name') %>" required>
      </div>
      <div class="form-group">
        <i class="fa fa-envelope" aria-hidden="true"></i>
        <input type="email" ng:model="signup.merge_fields.EMAIL" class="form-control" placeholder="<%= t('newsletter.email') %>" ng:change="signup.email_address = signup.merge_fields.EMAIL" required>
      </div>
      <div class="form-group">
        <i class="fa fa-phone" aria-hidden="true"></i>
        <input type="text" ng:model="signup.merge_fields.MMERGE3" class="form-control" placeholder="<%= t('newsletter.phone') %>" required>
      </div>
      <button type="submit" class="btn border-btn" ng:if="!loading"><i class="fa fa-check-square-o" aria-hidden="true"></i> <%= t('newsletter.sign_up') %></button>
      <button type="submit" class="btn border-btn" disabled="disabled" ng:if="loading"><i class="fa fa-check-square-o" aria-hidden="true"></i> <%= t('newsletter.submitting') %></button>
    </form>
  </div>
  <div id="newsletter-tab"><i class="fa fa-envelope" aria-hidden="true"></i> <%= t('newsletter.button_title') %></div>
</div>