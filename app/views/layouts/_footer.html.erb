<footer class="footer">
	<div class="container">
		<div class="row">

			<div class="col-md-9">
				
				<p class="text-muted">
					<address>
						<strong>© Wilson Investment Properties, Inc. 2016</strong><br>
						14435 Big Basin Way, Ste 240<br>
						Saratoga, CA 95070<br>
						<%= PHONE_NUMBER %>
					</address>
				</p>

			</div>
			<div class="col-md-3">
				
				<% if current_user %>
					<div align="right">
						<%= link_to '',logout_path,class: 'login-button' %>
					</div>
				<% else
				ruri = CGI.escape "#{request.protocol}#{request.host_with_port}#{request.fullpath}"
				rpath = login_path + "?redirect_uri=#{ruri}"
				%>
					<div align="right">
						<%= link_to '',rpath,class: 'login-button' %>
					</div>
				<% end  %>

			</div>

		</div>
	</div>
</footer>